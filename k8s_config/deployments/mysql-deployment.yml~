apiVersion: extensions/v1beta1
kind: Deployment
metadata: 
        name: mysql
spec:
        template:
                metadata:
                        labels:
                                app: mysql-wordpress
                                label: mysql
                spec:
                        containers:
                                - name: mysql
                                  image: mysql
                                  ports:
                                          - name: mysql-port
                                            containerPort: 3306
                                  volumeMounts:
                                          - name: mysql-storage
					    mountPath: /var/lib/mysql
				  env:
					  - name: MYSQL_ROOT_PASSWORD
 					    valueFrom:
					            secretKeyRef:
					              name: mysql-pass
					              key: password.txt
                        nodeSelector:
                                type: "ssd"
                        volumes:
                                - name: mysql-storage
                                  emptyDir: {}




